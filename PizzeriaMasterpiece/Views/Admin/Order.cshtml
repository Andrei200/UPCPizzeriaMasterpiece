<div class="row">
    <img class="img-responsive mb15" src="~/Images/Other/my_order.png" />
</div>
<div class="row">
    <div class="col-xs-12">
        <h1 class="order_h1">Lista de nuevos pedidos</h1>
    </div>
    <div class="table-responsive">
        <table class="table table-striped custom_table">
            <thead class="success">
                <tr class="info">
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Dirección</th>
                    <th>Adicional</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.ListOrder != null)
                {
                    for (var i = 0; i < ViewBag.ListOrder.Length; i++)
                    {
                        <tr>
                            <td>@ViewBag.ListOrder[i].OrderNo</td>
                            <td>@ViewBag.ListOrder[i].Date</td>
                            <td>@ViewBag.ListOrder[i].Address</td>
                            <td>@ViewBag.ListOrder[i].Remak</td>                            
                            <td><button class="btn btn-warning"><span class="glyphicon glyphicon-name"></span> Detalle</button></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>    
    <ul class="pager">
        <li><a href="#">Anterior</a></li>
        <li><a href="#">Siguiente</a></li>
    </ul>
</div>